# Knowledge Base Configuration Example
# Copy this to .env.kb and configure for your local setup

# Knowledge Base Storage
KB_DATA_PATH=data/kb
KB_INDEX_PATH=data/kb/index

# Document Processing
KB_MAX_FILE_SIZE_MB=50
KB_SUPPORTED_FORMATS=txt,md,pdf,docx,xlsx

# Text Processing
KB_CHUNK_SIZE=1000
KB_CHUNK_OVERLAP=200

# Embeddings (local model)
KB_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
KB_VECTOR_DIMENSION=384

# Search Configuration
KB_MAX_SEARCH_RESULTS=10
KB_SIMILARITY_THRESHOLD=0.5

# Logging
KB_LOG_LEVEL=INFO
KB_LOG_FILE=logs/kb.log